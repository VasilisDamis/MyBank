@using Microsoft.AspNetCore.Identity
@using MellonBank.Areas.Identity.Data

@inject SignInManager<MellonBankUser> SignInManager
@inject UserManager<MellonBankUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
           @{ MellonBankUser user = await UserManager.FindByIdAsync(UserManager.GetUserId(User));   
                <button class="form-inline">Hello @user.LastName</button>
            }
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
           
}
else
{
    
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
