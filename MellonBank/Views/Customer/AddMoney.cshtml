@using MellonBank.Areas.Identity.Data
@using MellonBank.Models
@model AddMoneyViewModel

@{
    ViewData["Title"] = "Add money";
}

<h1>@ViewData["Title"]</h1>

<div class="row">

    <div class="col-md-4">


        <form asp-action="AddMoney"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="AccountNumber" class="form-control" aria-required="true" value="@Model.AccountNumber" />
                <label asp-for="AccountNumber">AccountNumber </label>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Amount" class="form-control" aria-required="true"  />
                <label asp-for="Amount">Amount </label>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <button type="submit">Add Money</button>
        </form>
